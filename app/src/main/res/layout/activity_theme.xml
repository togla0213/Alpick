<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/theme_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/theme_container_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/theme_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/txt_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="THEME"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/theme_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize" />

        <ScrollView
            android:id="@+id/theme_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:scrollbarThumbVertical="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/not_back">

                <ImageView
                    android:id="@+id/theme_img_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/theme_menu1" />

                <ImageView
                    android:id="@+id/theme_img_menu2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/theme_img_menu1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/theme_menu2" />

                <ImageView
                    android:id="@+id/theme_img_menu3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/theme_img_menu2"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/theme_menu3" />


                <LinearLayout
                    android:id="@+id/theme_item_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/theme_btn_menu1_1"
                            android:layout_width="80dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="17dp"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"
                            android:background="@color/tab_background" />

                        <Button
                            android:id="@+id/theme_btn_menu1_2"
                            android:layout_width="80dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="17dp"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"
                            android:background="@color/theme_color_primary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@android:color/black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/theme_btn_menu2_1"
                            android:layout_width="80dp"
                            android:layout_height="130dp"
                            android:layout_marginLeft="17dp"
                            android:layout_marginRight="17dp"
                            android:layout_weight="0.5"
                            android:background="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>



    </io.codetail.widget.RevealFrameLayout>

    <ScrollView
        android:id="@+id/theme_scrollView"
        android:layout_width="@dimen/sliding_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="start|bottom"
        android:scrollbarThumbVertical="@android:color/transparent">

        <LinearLayout
            android:id="@+id/theme_left_drawer"
            android:layout_width="@dimen/sliding_menu_width"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>